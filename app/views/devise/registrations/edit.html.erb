<div class="container">
  <h2>Cập nhật thông tin</h2>
  <hr>
  <div class="row">
    <!-- left column -->
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"form-horizontal", role:"form",:multipart => true,method: :put }) do |f| %>

  <div class="col-md-3">
      <div class="text-center">
        <div class="avatar-box-sty" style="margin-left: 30px">
          <img src=<%= image_path(@blogger.profile_image) %> height="185" width="185">
        </div>
        <br>
        <div class="form-group">
            <label class="col-sm-5 control-label">Ảnh đại diện</label>
            <div class="col-sm-3">
                <%= f.file_field :profile_image,  label: "Ảnh đại diện"  %>
            </div>
        </div>
        <!--<input class="form-control" type="file">-->
      </div>
    </div>

    <!-- edit form column -->
    <div class="col-md-9 personal-info">

      <% if resource.errors.any? %>
          <div class="alert alert-info alert-dismissable">
            <a class="panel-close close" data-dismiss="alert">×</a>
            <%= devise_error_messages! %>
          </div>
      <% end %>
      <!--<form class="form-horizontal" role="form">-->

        <div class="form-group">
          <label class="col-lg-3 control-label">Họ và tên đệm</label>
          <div class="col-lg-8">
            <%= f.text_field :first_name, autofocus: true,class:"form-control",placeholder:"Họ và tên đệm",type:'text', :required => true %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Tên</label>
          <div class="col-lg-8">
            <%= f.text_field :last_name, autofocus: true,class:"form-control",placeholder:"Tên",type:'text', :required => true %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Địa chỉ</label>
          <div class="col-lg-8">
            <%= f.text_field :address, autofocus: true,class:"form-control",placeholder:"Địa chỉ",type:'text', :required => true %>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <%= f.email_field :email, autofocus: true,class:"form-control",placeholder:"Email Address",type:'email', :required => true %>
          </div>
        </div>

        <div class="form-group">
            <label class="col-lg-3 control-label">Số điện thoại:</label>
            <div class="col-lg-8">
              <%= f.text_field :phone, autofocus: true,class:"form-control",placeholder:"Điện thoại",type:'phone', :required => true %>
            </div>
        </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Giới tính:</label>
            <div class="col-lg-8">
              <%= f.collection_radio_buttons :gender, [["Nam", 'Nam'] ,["Nữ", 'Nữ']],:first, :last,class:"form-control", :required => true %>
            </div>
          </div>

        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <%= f.submit "Save Changes", class: "btn btn-primary" %>
            <!--<input class="btn btn-primary" value="Save Changes" type="button">-->
            <span></span>
            <%= link_to "Cancel", home_blogger_account_path(current_blogger.id),method: :get,class:"btn btn-default", value:"Cancel", type:"reset"%>
          </div>
        </div>
      <!--</form>-->
    </div>
  <% end %>
  </div>
</div>
<hr>